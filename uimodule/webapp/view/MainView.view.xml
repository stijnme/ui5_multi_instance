<mvc:View controllerName="net.expertum.MultiInstance.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

	<TabContainer items="{ path: '/BPCollection' }" id="myTabContainer"
					showAddNewButton="true"
					class="sapUiResponsiveContentPadding sapUiResponsivePadding--header"
					addNewButtonPress="addNewButtonPressHandler" itemClose="itemCloseHandler">
		<items>
			<TabContainerItem
				name="{FirstName}">
                <content>
				</content>
			</TabContainerItem>
		</items>
	</TabContainer>
</mvc:View>
